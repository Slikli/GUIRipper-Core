<project name="GUIRipper-Core" default="help" basedir="..">

  <property name="module" value="GUIRipper-Core" />
  <property name="root.dir" value=".." />
  <property name="src.dir" value="src" />
  <property name="generated.dir"
            value="${src.dir}/edu/umd/cs/guitar/model/data" />
  <property name="bin.dir" value="bin" />
  <property name="jar.dir" value="${root.dir}/jars" />
  <property name="shared.lib.dir" value="${root.dir}/shared" />
  <property name="ant.dir" value="${shared.lib.dir}/ant/lib" />
  <property name="resources.dir" value="resources" />
  <property name="coverage.dir" value="${root.dir}/coverage" />

  <target name="build">
    <mkdir dir="${bin.dir}" />

    <javac srcdir="${src.dir}" destdir="${bin.dir}" debug="true">
      <include name="**/*.java" />
      <classpath>
        <fileset dir="${jar.dir}" includes="**/*.jar" />
      </classpath>
    </javac>

    <jar destfile="${jar.dir}/${module}.jar">
      <fileset dir="${bin.dir}" includes="**/*.class" />
    </jar>
  </target>

  <target name="doc">
    <echo message="TODO: Generate documentation" />
  </target>

  <target name="clean">
    <delete dir="${bin.dir}" />
    <delete file="${jar.dir}/${module}.jar" />
  </target>

  <target name="dist">
    <antcall target="depends" />
    <antcall target="build" />
    <antcall target="doc" />
  </target>

  <target name="depends">
    <exec executable="python">
      <arg value="${shared.lib.dir}/python/checkout.py" />
      <arg value="GUITARModel-Core" />
    </exec>

    <ant antfile="${root.dir}/GUITARModel-Core/install/build.xml" target="dist"
         inheritAll="false" useNativeBasedir="true" />
  </target>

  <target name="help">
    <echo message="Available targets for ${module}:" />
    <echo message="  help:    Displays this help." />
    <echo message="  clean:   Removes output files created by other targets." />
    <echo message="  build:   Builds source code and library." />
    <echo message="  depends: Builds dependencies." />
    <echo message="  dist:    Builds source code, libraries, and dependencies." />
    <echo message="  install: Installs this library and dependencies." />
  </target>

</project>
